<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>admin.filter.loginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AdmissionServlet</servlet-name>
        <servlet-class>admin.controller.AdmissionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admit</servlet-name>
        <servlet-class>admin.controller.Admit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginManagerServlet</servlet-name>
        <servlet-class>admin.controller.LoginManagerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FirstTimeServlet</servlet-name>
        <servlet-class>admin.controller.FirstTimeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyServlet</servlet-name>
        <servlet-class>admin.controller.VerifyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>admin.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdmissionServlet</servlet-name>
        <url-pattern>/Admission</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admit</servlet-name>
        <url-pattern>/admissionStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginManagerServlet</servlet-name>
        <url-pattern>/LoginManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FirstTimeServlet</servlet-name>
        <url-pattern>/FirstTime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyServlet</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>admission_portal.html</welcome-file>
    </welcome-file-list>
</web-app>
